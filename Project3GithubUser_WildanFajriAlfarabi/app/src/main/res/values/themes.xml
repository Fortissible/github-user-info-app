<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectGithubUser_WildanFajriAlfarabi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray1</item>
        <item name="colorPrimaryVariant">@color/gray2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue1</item>
        <item name="colorSecondaryVariant">@color/blue2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="backgroundColor">
        <item name="android:background">#D8D8D8</item>
    </style>

    <style name="backgroundDetailColor">
        <item name="android:background">@color/gray3</item>
    </style>

    <style name="cardView_bg">
        <item name="android:background">@drawable/card_bg</item>
    </style>

    <style name="cardView_follow">
        <item name="android:background">@drawable/cardfollow_bg</item>
    </style>

    <style name="normalText">
        <item name="fontFamily">monospace</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="boldText">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="boldText_detailActivity">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="notFound_Text">
        <item name="android:textColor">@color/gray1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="notFound_TextDetail">
        <item name="android:textColor">@color/gray1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGeneral">
        <item name="android:backgroundTint">@color/greenButtonGithub</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:text">@string/followString</item>
    </style>

    <style name="switchTheme">
        <item name="colorControlActivated">#FF5A8B</item>
        <item name="trackTint">@color/gray3</item>
    </style>

</resources>